<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ntheurer.dodatesapp">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.CalendarActivity"
            android:label="@string/calendar" >
        </activity>
        <activity
            android:name=".ui.ClassListActivity"
            android:label="@string/class_list" />
        <activity android:name=".ui.AddClassActivity"
            android:label="@string/add_class" />
        <activity android:name=".ui.ClassDetailsActivity"
            android:label="@string/class_assignments"/>
        <activity android:name=".ui.AddAssignmentActivity"
            android:label="@string/add_assignment"/>
    </application>

</manifest>